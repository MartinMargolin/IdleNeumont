<Window x:Class="IdleNeumont.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdleNeumont"
        mc:Ignorable="d"
        Title="IDLE NEUMONT" Background="White" Width="800" Height="600">
    <Grid>
        <StackPanel x:Name="stackStart" Visibility="Collapsed">
            <Image x:Name="neumontStart" Source="/Resources/NeumontGoldSmall.png" Width="300" Height="300" Margin="20,50,0,0" Visibility="Collapsed"/>
            <Image x:Name="chaoticStart" Source="/Resources/ChaoticWhiteSmall.png" Width="400" Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel x:Name="StartMenu" Visibility="Visible" Margin="10">
            <TextBox x:Name="Title" FontSize="64" Text="Idle Neumont" Visibility="Visible" HorizontalAlignment="Center" Margin="0,100,0,0"/>
            <Button Name="NewGame" Visibility="Visible" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Content="New Game" FontSize="16" Click="btn_Newgame" Margin="15">
                
                
            </Button>
            <Button Name="LoadGaem" Visibility="Visible" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Load game" FontSize="16" Click="btn_LoadGame" Margin="15">
                
                
            </Button>
            <Button Name="Settings" Visibility="Visible" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Settings" FontSize="16" Click="btn_Settings" Margin="15">
                
                
            </Button>
            <Button Name="Quit" Visibility="Visible" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Quit" FontSize="16" Click="btn_Quit" Margin="15">
                
                
            </Button>
            

        </StackPanel>
 
        
    </Grid>


   
</Window>
